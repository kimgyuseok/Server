	<div class="container">
		<h1 class="page-header">쿠키, Cookie<small></small></h1>
			
			<input type="button" value="쿠키에 데이터 저장하기" id="btn1">
			<input type="button" value="쿠키에 저장된 데이터 가져오기" id="btn2">
			<input type="button" value="쿠키에 저장된 데이터 삭제하기" id="btn3">
	</div>
	

	<script>
		$('#btn1').click(function(){
// 			document.cookie = "hong,20,서울시 강남구";
// 			document.cookie = "name=홍길동&age=20&address=서울시";
			setCookie('num',100);
			setCookie('name','홍길동');
			setCookie('age',20,30);
		});
		
		$('#btn2').click(function(){
// 			document.cookie = "hong";
			alert(getCookie('num'));
			alert(getCookie('name'));
			alert(getCookie('age'));
		});
		
		$('#btn3').click(function(){
			setCookie('age',0,-1)
		});
		}
		
	</script>
